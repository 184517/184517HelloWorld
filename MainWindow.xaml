<Window x:Class="_184517HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184517HelloWorld"
        mc:Ignorable="d"
        Title="First Program" Height="350" Width="500" FontSize="14">
    <StackPanel Orientation="Vertical">
        <Label>What up homeslice</Label>
        <Label>How's it hanging my dude</Label>
        <StackPanel Orientation="Vertical">
            <Label x:Name="Message" Content="Hello World" />
            <TextBox x:Name="txtName" Text="Enter your name here:" />
            <Button x:Name="btnGreeting" Content="Click for greeting" Click="btnGreeting_Click" />
        </StackPanel>
    </StackPanel>
</Window>
